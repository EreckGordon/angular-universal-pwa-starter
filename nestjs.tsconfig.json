{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es2017", 
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@environments/*": ["src/environments/*"],
      "@interfaces/*": ["src/shared/interfaces/*"]
    }
  },
  "include": [
    "src/server/modules/**/*",
    "src/server/server.ts"
  ],
  "exclude": [
    "server/**/*.spec.ts"
  ]
}
